{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>open-feature/community-tooling"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^@nx/", "nx"],
      "enabled": false
    },
    {
      "dependencyDashboardApproval": true,
      "matchPackagePatterns": [
        "^@typescript-eslint/",
        "^eslint"
      ],
      "groupName": "ESLint"
    },
    {
      "dependencyDashboardApproval": true,
      "matchPackagePatterns": [
        "^@types/"
      ],
      "groupName": "Types"
    },
    {
      "dependencyDashboardApproval": true,
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    }
  ]
}
