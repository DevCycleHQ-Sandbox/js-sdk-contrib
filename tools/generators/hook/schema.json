{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "hook",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the hook you're building.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "examples": ["logger"],
      "x-prompt": "What would you like to name the hook?"
    }
  },
  "required": ["name"]
}
